@model List<Bug_Tracker2020.Models.Bug>


@{
    ViewData["Title"] = "User Bugs";
}

<h1>User Bugs</h1>

@foreach (var allBugs in Model)
{
<div class="d-inline-block text-white bg-primary mb-3" style="max-width: 20rem;">
    <div class="card-header"><h4>@allBugs.Status Ticket#  @allBugs.ID - [@allBugs.CreatedDate] </h4></div>
    <div class="card-body">
        <p class="card-text font-weight-bold"><a href="SingleBug?id=@allBugs.ID">Subject: @allBugs.Subject</a></p>
        <p class="card-text">Description: @allBugs.Description</p>
        <p class="card-text">User Name: @allBugs.UserFirstName</p>
        <p class="card-text">Admin Name: @allBugs.AdminFirstName</p>
        @*<h5>Comments</h5>
        <form action="AddComment?id=@Model.ID">
            <input type="submit" value="Add a Comment" />
        </form>*@
    </div>
</div>
}