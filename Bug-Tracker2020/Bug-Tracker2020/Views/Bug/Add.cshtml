@model Bug_Tracker2020.ViewModels.AddBugViewModel

@{
    ViewData["Title"] = "Report A Bug";
}

<h1>Report A Bug</h1>



@using Microsoft.AspNetCore.Http;

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" asp-controller="Bug" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserFirstName" class="form-control" value=@Context.Session.GetString("firstname") type="hidden" />
                <span asp-validation-for="UserFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserID" class="form-control" value=@Context.Session.GetInt32("id") type="hidden" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CreatedDate" class="form-control" type="hidden" value=@DateTime.Now />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

